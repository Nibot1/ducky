{
  "name": "Ducky",
  "description": "Digital Companion for Developers",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Ducky Quack",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "ducky16.png",
    "32": "ducky32.png",
    "48": "ducky48.png",
    "128": "ducky128.png"
  }
}
